<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".stoper.StoperFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stoper_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add_new_alarm_btn">

        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/add_new_alarm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/light_white_rounded_button"
            android:text="Dodaj nowy stoper"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>