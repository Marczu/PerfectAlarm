<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorAccent"/>
            <stroke
                android:color="@color/primary_light"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#30ff7043" />

            <stroke
                android:color="@color/chat_light_grey"
                android:width="1dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>

</selector>