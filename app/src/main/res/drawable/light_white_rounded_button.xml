<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#50FFFFFF"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="1dp"/>
            <corners
                android:radius="7dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#40008000"/>

            <corners
                android:radius="7dp"/>
        </shape>
    </item>

</selector>