<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#50FFFFFF"/>
            <stroke
                android:color="@color/colorAccent"
                android:width="1dp"/>

        </shape>
    </item>

    <item
        android:bottom="20dp"
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp"
        >
        <shape>
            <solid
                android:color="#10FFFFFF"/>




        </shape>
    </item>

</selector>